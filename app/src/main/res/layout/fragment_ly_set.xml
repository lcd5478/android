<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".db.LySetFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="连接设备"
            android:textColor="#000"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_shezhi"
            android:layout_above="@id/button_soushuo"
            android:orientation="vertical">


            <CheckBox
                android:id="@+id/checkBox_ypd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/boutt_bankuang"
                android:button="@drawable/boutt_shangxiala"
                android:text="已配对" />

            <ListView
                android:id="@+id/listview_ypd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stackFromBottom="false" />

            <CheckBox
                android:id="@+id/checkBox_wpd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/boutt_bankuang"

                android:button="@drawable/boutt_shangxiala"
                android:text="已配对" />

            <ListView
                android:id="@+id/listview_wpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stackFromBottom="false" />


        </LinearLayout>

        <Button
            android:id="@+id/button_soushuo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:background="@drawable/boutt_jr_1"
            android:text="搜索设备" />
    </RelativeLayout>
</FrameLayout>